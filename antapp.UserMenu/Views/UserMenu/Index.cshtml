@using antapp.UserMenu.ViewModel
@using antapp.UserMenu.Models

@model UserMenuIndexViewModel

@{
    ViewBag.Title = "UserMenu";
}

<div>
    <h1>@Model.UserName</h1>
</div>

<div class="accordion" id="AntCollection">
    <div class="accordion-item">
        <h2 class="accordion-header" id="header-@Model.UserName" >
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#ants-@Model.UserName" aria-expanded="false" aria-controls="ants-@Model.UserName">
                <div>Ant Collection</div>
            </button>
        </h2>

        <div id="ants-@Model.UserName" class="accordion-collapse collapse show" aria-labelledby="ants" data-bs-parent="#accordionPage">
            <div class="accordion-body">
                <table class="table">
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Catch Date</th>
                        <th>Catch Location</th>
                    </tr>
                    @foreach (var ant in Model.AntCollection)
                    {
                        <tr>
                            <td>
                            <img src="@ant.ImageUrl" class="img-thumbnail rounded" style="height:100px;width:100px;"/>
                            </td>
                            
                            <td>@ant.Name</td>
                            <td>@ant.Description</td>
                            <td>@ant.CatchDate.ToString("dd.MM.yyyy")</td>
                            <td>@ant.CatchLocation</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>  
</div>

<div class="accordion" id="Achivments">
    <div class="accordion-item">
        <h2 class="accordion-header" id="header2-@Model.UserName">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#achivments-@Model.UserName" aria-expanded="false" aria-controls="achivments-@Model.UserName">
                <div>Achivments</div>
            </button>
        </h2>

        <div id="achivments-@Model.UserName" class="accordion-collapse collapse show" aria-labelledby="Achivments">
            <div class="accordion-body">
                <table class="table">
                    @foreach (var achivment in Model.Achivments)
                    {
                        <tr>
                            <td>
                            <img src="~/images/@achivment.ImageUrl" class="img-thumbnail rounded" style="height:100px;width:100px;"/>
                            </td>
                            
                            <td>@achivment.Name</td>
                            <td>@achivment.Description</td>
                            <td>@achivment.AquireDate.ToString("dd.MM.yyyy")</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
